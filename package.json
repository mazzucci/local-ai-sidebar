{
  "name": "local-ai-sidebar",
  "version": "1.0.2",
  "description": "Privacy-first AI sidebar using Chrome's built-in AI",
  "scripts": {
    "build": "npm run build:prod",
    "build:prod": "./build-prod.sh",
    "build:dev": "./build-dev.sh",
    "copy-assets": "cp src/*.html dist/ && cp src/*.css dist/ && cp -r src/icons dist/ && cp src/service-worker.js dist/ && cp src/manifest.json dist/ && cp node_modules/pdfjs-dist/build/pdf.worker.js dist/",
    "dev": "esbuild src/LocalAI.ts --bundle --outfile=dist/LocalAI.js --format=iife --global-name=LocalAIApp --watch --define:DEBUG_MODE=true",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "dead-code": "npx tsc --noEmit && npm run lint",
    "test": "jest --config tests/jest.config.js",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:ci": "jest --config tests/jest.config.js --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@babycommando/entity-db": "^1.0.11",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^3.21.0",
    "@tensorflow/tfjs-backend-cpu": "^3.21.0",
    "@tensorflow/tfjs-backend-webgl": "^3.21.0",
    "compromise": "^14.14.4",
    "fast-cosine-similarity": "^1.2.2",
    "pdfjs-dist": "^5.4.296"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/chrome": "^0.0.251",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "esbuild": "^0.25.11",
    "eslint": "^8.57.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "privacy",
    "local"
  ],
  "author": "Local AI Sidebar",
  "license": "MIT"
}
